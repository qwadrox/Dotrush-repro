[
  {
    "label": "Debug .NET Core App",
    "adapter": "netcoredbg",
    "request": "launch",
    "program": "${ZED_WORKTREE_ROOT}/Api1/bin/Debug/net8.0/Api1.dll",
    "cwd": "${ZED_WORKTREE_ROOT}/Api1",
    "env": {
      "ASPNETCORE_ENVIRONMENT": "Development",
      "ASPNETCORE_URLS": "http://localhost:5244"
    },
    "build": {
      "command": "dotnet",
      "args": [
        "build",
        "${ZED_WORKTREE_ROOT}/Api1/Api1.csproj",
        "-p:Configuration=Debug",
        "-p:TargetFramework=net8.0"
      ]
    }
  }
]
